<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="wsteam.GamePage"
>
<StackPanel Margin="32,24" Spacing="24" Name="MainContent">
    <Grid ColumnDefinitions="Auto,*,Auto">
        <Border
                Grid.Column="0"
                Width="120"
                Height="120"
                CornerRadius="12"
                ClipToBounds="True"
                BoxShadow="0 4 12 0 #30000000"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
            >
            <Panel Background="#1B2838">
                <TextBlock
                        Text="ðŸŽ®"
                        FontSize="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                    />
            </Panel>
        </Border>

        <StackPanel
                Grid.Column="1"
                Margin="24,0,0,0"
                VerticalAlignment="Center"
                Spacing="8"
            >
            <TextBlock Text="Portal 2" FontSize="28" FontWeight="Bold" />
            <TextBlock
                    Text="Valve Corporation â€¢ Puzzle, Platform"
                    FontSize="14"
                    Foreground="{DynamicResource TextControlPlaceholderForeground}"
                />
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                <Border Background="#4CAF50" CornerRadius="4" Padding="8,4">
                    <TextBlock
                            Text="Verified"
                            FontSize="12"
                            Foreground="White"
                            FontWeight="Medium"
                        />
                </Border>
                <Border
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="4"
                        Padding="8,4"
                    >
                    <TextBlock
                            Text="15.2 GB"
                            FontSize="12"
                            FontWeight="Medium"
                        />
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="8">
            <Button Classes="primary" Height="44" MinWidth="140">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Path
                            Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                            Fill="White"
                            Stretch="Uniform"
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                        />
                    <TextBlock Text="Download" FontSize="14" />
                </StackPanel>
            </Button>
            <Button Classes="secondary" HorizontalAlignment="Stretch">
                <TextBlock Text="More Options" FontSize="13" />
            </Button>
        </StackPanel>
    </Grid>

    <!-- Download Progress -->
    <Border
            Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="20"
            BoxShadow="0 2 6 0 #20000000"
        >
        <StackPanel Spacing="12">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock
                        Grid.Column="0"
                        Text="Download Progress"
                        FontWeight="SemiBold"
                        FontSize="15"
                    />
                <TextBlock
                        Grid.Column="1"
                        Text="45% â€¢ 6.8 GB / 15.2 GB"
                        FontSize="13"
                        Foreground="{DynamicResource TextControlPlaceholderForeground}"
                    />
            </Grid>

            <ProgressBar
                    Value="45"
                    Maximum="100"
                    Height="8"
                    CornerRadius="4"
                    Foreground="#2196F3"
                />

            <Grid ColumnDefinitions="*,*,*" Margin="0,8,0,0">
                <StackPanel Grid.Column="0">
                    <TextBlock
                            Text="Speed"
                            FontSize="12"
                            Foreground="{DynamicResource TextControlPlaceholderForeground}"
                        />
                    <TextBlock
                            Text="12.5 MB/s"
                            FontSize="16"
                            FontWeight="Medium"
                            Margin="0,4,0,0"
                        />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock
                            Text="Time Remaining"
                            FontSize="12"
                            Foreground="{DynamicResource TextControlPlaceholderForeground}"
                        />
                    <TextBlock
                            Text="11 minutes"
                            FontSize="16"
                            FontWeight="Medium"
                            Margin="0,4,0,0"
                        />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock
                            Text="Status"
                            FontSize="12"
                            Foreground="{DynamicResource TextControlPlaceholderForeground}"
                        />
                    <TextBlock
                            Text="Downloading"
                            FontSize="16"
                            FontWeight="Medium"
                            Margin="0,4,0,0"
                            Foreground="#2196F3"
                        />
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                <Button Classes="secondary" Padding="12,8">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Path
                                Data="M6,14H18V18H6M6,6H18V10H6V6Z"
                                Fill="{Binding $parent[Button].Foreground}"
                                Stretch="Uniform"
                                Width="14"
                                Height="14"
                            />
                        <TextBlock Text="Pause" />
                    </StackPanel>
                </Button>
                <Button Classes="secondary" Padding="12,8">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Path
                                Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M10,9H14V15H10V9Z"
                                Fill="{Binding $parent[Button].Foreground}"
                                Stretch="Uniform"
                                Width="14"
                                Height="14"
                            />
                        <TextBlock Text="Cancel" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>

    <!-- Game Info -->
    <StackPanel Spacing="16">
        <TextBlock Text="About" FontSize="18" FontWeight="SemiBold" />
        <TextBlock
                TextWrapping="Wrap"
                FontSize="14"
                LineHeight="22"
                Foreground="{DynamicResource TextControlPlaceholderForeground}"
            >
            Portal 2 is a first-person puzzle-platform video game developed by Valve. Players solve puzzles by placing portals and teleporting between them. The game includes a single-player campaign featuring a new protagonist, Chell, and a brand new co-operative mode featuring two robots.
        </TextBlock>
    </StackPanel>

    <!-- System Requirements -->
    <Border
            Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="20"
            BoxShadow="0 2 6 0 #20000000"
        >
        <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock
                        Text="Minimum Requirements"
                        FontWeight="SemiBold"
                        FontSize="15"
                    />
                <StackPanel Spacing="8">
                    <StackPanel Spacing="2">
                        <TextBlock
                                Text="OS"
                                FontSize="12"
                                Foreground="{DynamicResource TextControlPlaceholderForeground}"
                            />
                        <TextBlock
                                Text="Windows 7 / Vista / XP"
                                FontSize="13"
                            />
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock
                                Text="Processor"
                                FontSize="12"
                                Foreground="{DynamicResource TextControlPlaceholderForeground}"
                            />
                        <TextBlock
                                Text="3.0 GHz P4, Dual Core 2.0"
                                FontSize="13"
                            />
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock
                                Text="Memory"
                                FontSize="12"
                                Foreground="{DynamicResource TextControlPlaceholderForeground}"
                            />
                        <TextBlock Text="2 GB RAM" FontSize="13" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock
                        Text="Recommended Requirements"
                        FontWeight="SemiBold"
                        FontSize="15"
                    />
                <StackPanel Spacing="8">
                    <StackPanel Spacing="2">
                        <TextBlock
                                Text="OS"
                                FontSize="12"
                                Foreground="{DynamicResource TextControlPlaceholderForeground}"
                            />
                        <TextBlock
                                Text="Windows 7 / Vista / XP"
                                FontSize="13"
                            />
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock
                                Text="Processor"
                                FontSize="12"
                                Foreground="{DynamicResource TextControlPlaceholderForeground}"
                            />
                        <TextBlock
                                Text="Intel Core 2 Duo E6600"
                                FontSize="13"
                            />
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock
                                Text="Memory"
                                FontSize="12"
                                Foreground="{DynamicResource TextControlPlaceholderForeground}"
                            />
                        <TextBlock Text="4 GB RAM" FontSize="13" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</StackPanel>
</UserControl>
