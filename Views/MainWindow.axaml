<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:wsteam;assembly=wsteam"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="1200"
    d:DesignHeight="700"
    x:Class="wsteam.MainWindow"
    Title="Steam Downloader"
    MinWidth="900"
    MinHeight="600"
    Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
    ExtendClientAreaToDecorationsHint="False"
>
    <Window.Styles>
        <Style Selector="Button.nav-button">
            <Setter
                Property="Background"
                Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource SystemControlForegroundBaseLowBrush}"
            />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="8,2" />
        </Style>

        <Style Selector="Button.nav-button:pointerover">
            <Setter
                Property="Background"
                Value="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            />
        </Style>

        <Style Selector="Button.nav-button.selected">
            <Setter
                Property="Background"
                Value="{DynamicResource AccentButtonBackground}"
            />
            <Setter
                Property="Foreground"
                Value="{DynamicResource AccentButtonForeground}"
            />
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="4,2" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter
                Property="Background"
                Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource SystemControlForegroundBaseLowBrush}"
            />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style Selector="ListBoxItem:pointerover">
            <Setter
                Property="Background"
                Value="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            />
        </Style>

        <Style Selector="ListBoxItem:selected">
            <Setter
                Property="Background"
                Value="{DynamicResource AccentButtonBackground}"
            />
            <Setter
                Property="Foreground"
                Value="{DynamicResource AccentButtonForeground}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource AccentButtonBackground}"
            />
        </Style>

        <Style Selector="Button.primary">
            <Setter
                Property="Background"
                Value="{DynamicResource AccentButtonBackground}"
            />
            <Setter
                Property="Foreground"
                Value="{DynamicResource AccentButtonForeground}"
            />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter
                Property="Background"
                Value="{DynamicResource AccentButtonBackgroundPointerOver}"
            />
        </Style>

        <Style Selector="Button.secondary">
            <Setter
                Property="Background"
                Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style Selector="Button.secondary:pointerover">
            <Setter
                Property="Background"
                Value="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
            />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource SystemControlForegroundBaseHighBrush}"
            />
        </Style>
    </Window.Styles>

    <Panel>
        <!-- Main Container -->
        <!-- Solid background for X11 compatibility -->
        <Border
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
        />

        <Grid RowDefinitions="Auto,*">
            <!-- Title Bar -->
            <Border
                Grid.Row="0"
                Height="40"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1"
                IsHitTestVisible="False"
            >
                <TextBlock
                    Text="Steam Downloader"
                    FontSize="13"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"
                    Margin="60,0,0,0"
                />
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" ColumnDefinitions="260,*" Margin="0,8,0,0">

                <!-- Left Sidebar -->
                <Border
                    Grid.Column="0"
                    Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="8,8,4,8"
                    Padding="0,8"
                    BoxShadow="0 2 8 0 #20000000"
                >
                    <Grid RowDefinitions="Auto,*,Auto">

                        <!-- Navigation Buttons -->
                        <StackPanel Grid.Row="0" Spacing="4">
                            <Button
                                Classes="nav-button selected"
                                Name="GamesButton"
                            >
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="12"
                                >
                                    <Path
                                        Data="M12 2L2 7V17L12 22L22 17V7L12 2M12 4.18L19.5 8.09L12 12L4.5 8.09L12 4.18M4 10L11 14V20L4 16V10M20 10V16L13 20V14L20 10Z"
                                        Fill="{Binding $parent[Button].Foreground}"
                                        Stretch="Uniform"
                                        Width="18"
                                        Height="18"
                                    />
                                    <TextBlock
                                        Text="Games"
                                        VerticalAlignment="Center"
                                        FontWeight="Medium"
                                    />
                                </StackPanel>
                            </Button>

                            <Button Classes="nav-button" Name="SourcesButton">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="12"
                                >
                                    <Path
                                        Data="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M12 4C16.41 4 20 7.59 20 12S16.41 20 12 20 4 16.41 4 12 7.59 4 12 4M12 6C8.69 6 6 8.69 6 12S8.69 18 12 18 18 15.31 18 12 15.31 6 12 6M12 8C14.21 8 16 9.79 16 12S14.21 16 12 16 8 14.21 8 12 9.79 8 12 8Z"
                                        Fill="{Binding $parent[Button].Foreground}"
                                        Stretch="Uniform"
                                        Width="18"
                                        Height="18"
                                    />
                                    <TextBlock
                                        Text="Sources"
                                        VerticalAlignment="Center"
                                        FontWeight="Medium"
                                    />
                                </StackPanel>
                            </Button>

                            <Button Classes="nav-button" Name="SettingsButton">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="12"
                                >
                                    <Path
                                        Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                        Fill="{Binding $parent[Button].Foreground}"
                                        Stretch="Uniform"
                                        Width="18"
                                        Height="18"
                                    />
                                    <TextBlock
                                        Text="Settings"
                                        VerticalAlignment="Center"
                                        FontWeight="Medium"
                                    />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Games List -->
                        <Border
                            Grid.Row="1"
                            Margin="8,16,8,8"
                            Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            BoxShadow="0 1 4 0 #15000000"
                            Name="GamesListContainer"
                        >
                            <ScrollViewer>
                                <ListBox
                                    Name="GamesList"
                                    Background="Transparent"
                                    BorderThickness="0"
                                >
                                    <!-- Sample Game Items -->
                                    <ListBoxItem>
                                        <Grid ColumnDefinitions="36,*,Auto">
                                            <Border
                                                Grid.Column="0"
                                                Width="32"
                                                Height="32"
                                                CornerRadius="6"
                                                ClipToBounds="True"
                                            >
                                                <Panel Background="#1B2838" />
                                            </Border>
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                            >
                                                <TextBlock
                                                    Text="Half-Life 2"
                                                    FontWeight="Medium"
                                                    FontSize="13"
                                                />
                                                <TextBlock
                                                    Text="Ready"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource TextControlPlaceholderForeground}"
                                                />
                                            </StackPanel>
                                            <Ellipse
                                                Grid.Column="2"
                                                Width="8"
                                                Height="8"
                                                Fill="#4CAF50"
                                                VerticalAlignment="Center"
                                            />
                                        </Grid>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <Grid ColumnDefinitions="36,*,Auto">
                                            <Border
                                                Grid.Column="0"
                                                Width="32"
                                                Height="32"
                                                CornerRadius="6"
                                                ClipToBounds="True"
                                            >
                                                <Panel Background="#1B2838" />
                                            </Border>
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                            >
                                                <TextBlock
                                                    Text="Portal 2"
                                                    FontWeight="Medium"
                                                    FontSize="13"
                                                />
                                                <TextBlock
                                                    Text="Downloading - 45%"
                                                    FontSize="11"
                                                    Foreground="#2196F3"
                                                />
                                            </StackPanel>
                                            <Ellipse
                                                Grid.Column="2"
                                                Width="8"
                                                Height="8"
                                                Fill="#2196F3"
                                                VerticalAlignment="Center"
                                            />
                                        </Grid>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <Grid ColumnDefinitions="36,*,Auto">
                                            <Border
                                                Grid.Column="0"
                                                Width="32"
                                                Height="32"
                                                CornerRadius="6"
                                                ClipToBounds="True"
                                            >
                                                <Panel Background="#1B2838" />
                                            </Border>
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                            >
                                                <TextBlock
                                                    Text="Team Fortress 2"
                                                    FontWeight="Medium"
                                                    FontSize="13"
                                                />
                                                <TextBlock
                                                    Text="Queued"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource TextControlPlaceholderForeground}"
                                                />
                                            </StackPanel>
                                            <Ellipse
                                                Grid.Column="2"
                                                Width="8"
                                                Height="8"
                                                Fill="#9E9E9E"
                                                VerticalAlignment="Center"
                                            />
                                        </Grid>
                                    </ListBoxItem>
                                </ListBox>
                            </ScrollViewer>
                        </Border>

                        <!-- Add Game Button -->
                        <Button
                            Grid.Row="2"
                            Classes="secondary"
                            HorizontalAlignment="Stretch"
                            Margin="12,8,12,12"
                            Name="AddGameButton"
                        >
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8"
                                HorizontalAlignment="Center"
                            >
                                <Path
                                    Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                    Fill="{Binding $parent[Button].Foreground}"
                                    Stretch="Uniform"
                                    Width="16"
                                    Height="16"
                                />
                                <TextBlock Text="Add Game" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Border
                    Grid.Column="1"
                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="4,8,8,8"
                    BoxShadow="0 2 8 0 #20000000"
                >
                    <ScrollViewer>
                        <views:GamePage />
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Panel>
</Window>
